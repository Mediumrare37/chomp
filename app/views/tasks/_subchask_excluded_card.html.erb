<% if chask.has_excluded_subchasks? %>
  <% chask.subchasks.each do |subchask| %>
    <% if subchask.excluded? %>
      <div class="excluded-chask-card">
        <div class="excluded-subshow-b-header">
          <div class="subshow-title">
            <p><%= subchask.title %></p>
          </div>
          <%= simple_form_for subchask, url: queued_chask_path(subchask) do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 'queued'} %>
            <%= f.submit 'Recover Task', class: "recover-button" %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <% if chask.excluded? %>
    <div class="excluded-chask-card">
      <div class="excluded-subshow-b-header">
        <div class="subshow-title">
          <p><%= chask.title %></p>
        </div>
        <%= simple_form_for chask, url: queued_chask_path(chask) do |f| %>
          <%= f.input :status, as: :hidden, input_html: { value: 'queued'} %>
          <%= f.submit 'Recover Task', class: "recover-button" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
